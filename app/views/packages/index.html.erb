<hr>
<div>
<%= notice %>
</div>
<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
    <p> Know if something gets lost in the mail </p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a new Package
    </h2>

    <form action="/insert_package" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="suppose_to_arrive_box">
          Suppose to arrive
        </label>

        <input type="date" id="suppose_to_arrive_box" name="query_suppose_to_arrive">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details" rows= "3"> </textarea>
      </div>

      <div>
      <input type="hidden" name="query_user_id" value="<%= @current_user.id %>">
      </div>

      <button>
        Log Delivery 
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Suppose to arrive
        </th>

        <th>
          Details
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_packages.each do |a_package| %>
      <tr>
        <td>
          <%= a_package.id %>
        </td>

        <td>
          <%= a_package.description %>
        </td>

        <td>
          <%= a_package.suppose_to_arrive %>
        </td>

        <td>
          <%= a_package.details %>
        </td>

        <td>
          <%= a_package.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_package.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_package.updated_at) %> ago
        </td>

        <td>
          <a href="/packages/<%= a_package.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
